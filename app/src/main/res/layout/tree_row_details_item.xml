<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/tvTreeRowNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m5dp"
        android:textSize="@dimen/ts10sp" />
    
    <TextView
        android:id="@+id/tvTreeNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m5dp"
        android:background="@drawable/bg_tree_row_details"
        android:paddingVertical="@dimen/m10dp"
        android:textAlignment="center" />
    
    <TextView
        android:id="@+id/tvStaffWorked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/m5dp"
        android:textSize="@dimen/ts10sp" />

</LinearLayout>