<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/m5dp"
    android:background="@drawable/tree_rows_selector"
    android:id="@+id/rlTreeRowNoView">
    
    <TextView
        android:id="@+id/tvRowName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingHorizontal="@dimen/m17dp"
        android:paddingVertical="@dimen/m10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/ts17sp" />
    
    <RelativeLayout
        android:id="@+id/rlOrangeDotView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        
        <View
            android:id="@+id/viewOrangeDot"
            android:layout_width="@dimen/m5dp"
            android:layout_height="@dimen/m5dp"
            android:layout_marginTop="@dimen/m5dp"
            android:layout_marginEnd="@dimen/m5dp"
            android:background="@drawable/bg_orange_dot" />
    </RelativeLayout>


</RelativeLayout>